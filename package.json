{
  "name": "local_sent",
  "version": "1.0.0",
  "description": "Cross-platform LAN file transfer tool (TypeScript MVP)",
  "main": "dist/cli.js",
  "bin": {
    "local-sent": "dist/cli.js"
  },
  "scripts": {
    "dev": "tsx src/cli.ts",
    "build": "tsc -p tsconfig.json",
    "test": "tsx --test tests/**/*.test.ts",
    "check": "npm run build && npm run test",
    "desktop:install": "npm --prefix desktop install",
    "desktop:dev": "npm --prefix desktop run tauri:dev",
    "desktop:build": "npm --prefix desktop run tauri:build",
    "release": "npm run build && pkg . --targets node20-linux-x64,node20-macos-x64,node20-macos-arm64,node20-win-x64 --out-path release",
    "release:current": "npm run build && node scripts/release-current.cjs",
    "start": "node dist/cli.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "bonjour-service": "^1.3.0",
    "commander": "^14.0.3"
  },
  "devDependencies": {
    "@yao-pkg/pkg": "^6.14.1",
    "@types/node": "^25.3.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
